{
  "files": ["src/main.ts"],
  "include": ["src/declarations.d.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "lib",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018"
    ],
    "target": "ES2020",
    "types": ["@cloudflare/workers-types"]
  },
  "ts-node": {
    "transpileOnly": true
  }
}
